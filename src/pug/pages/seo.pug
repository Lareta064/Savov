block content
	.page-column
		include ../sections/_header.pug
		//==== MAIN =====
		main.inner-main
			include ../sections/_promo-seo.pug
			section.our-benefits
				.container
					.our-benefits-grid
						.benefit-card.benefit-1
							svg.svg-ten
								use(href='./img/sprite.svg#svg-ten')
							p В DIGITAL
						.benefit-card.benefit-2
							p РОССИЯ #[br] СНГ #[br] ОАЭ #[br]
